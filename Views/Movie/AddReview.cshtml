@model movies.Models.Movie

@using (Html.BeginForm("AddReviewPost", "Movie", FormMethod.Post))
{ 
<div class="container">
            <h1 class="col-md-8 offset-md-1">Add Movie Review</h1>
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        <label class="form-label" for="MovieName">Movie Name:</label>
                        <input type="text" class="form-control" placeholder="Enter Move Name" asp-for="Name" required>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="form-label" for="Score">Score:</label>
                        <input type="number" min="0" max="10" class="form-control" asp-for="Score" placeholder="0 bad - 10 amazing" required>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="form-label" for="MustWatch">
                                Must Watch?
                                <input type="checkbox" class="form-control" asp-for="MustWatch">
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        <label class="form-message" for="Review">Review</label>
                        <textarea type="message" class="form-control" placeholder="Enter a Review:" asp-for="Review" rows="6"></textarea>
                    </div>
                </div>
            </div>
            <button type="reset" class="btn btn-primary btn-lg" id="submit">Reset</button>
            <button type="submit" class="btn btn-primary btn-lg" id="submit">Submit</button>
        </div>
}

