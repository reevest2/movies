@{
    <form class="col-md-8 offset-md-3 needs-validation" onsubmit="alert('Huge Success!')">
        <div class="container">
            <h1 class="col-md-8 offset-md-1">Add Movie Review</h1>
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        <label class="form-label" for="MovieName">Movie Name:</label>
                        <input type="text" class="form-control" id="firstName" placeholder="Enter Move Name" required>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="form-group">
                        <label class="form-label" for="Score">Score:</label>
                        <input type="number" class="form-control" id="Score" placeholder="Enter Score [0 being bad- 10 being amazing]" required>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    <label class="form-message" for="Review">Review</label>
                    <textarea type="message" class="form-control" id="Review" placeholder="Enter a Review:" rows="6"></textarea>
                </div>
            </div>
            <div class="col-md-8">
                <div class="col-md-8">
                    <div class="form-group">
                        <label class="form-label" for="Score">
                            Must Watch?
                            <input type="checkbox" class="form-control" id="MustWatch" value="MustWatch">
                        </label>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-lg" id="submit">Submit</button>
        </div>
    </form>
}
