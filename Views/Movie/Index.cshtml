@model List<movies.Models.Movie>
    
@{ 
    ViewData["Title"] = "Movies Page";
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Movie Name</th>
            <th>Score</th>
            <th>Review</th>
            <th>Must Watch?</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
        <tr>
            <td hidden>@movie.Id</td>
            <td>@movie.Name</td>
            <td>@movie.Score</td>
            <td>@movie.Review</td>
            <td>@{if (movie.MustWatch == true)}  &#10004;</td>
            <td>
                <!--onclick="location.href"Url.Action("Edit", "Movie", new { id = movie.Id })-->
                <button type="button" class="btn-outline-primary">
                    Edit
                </button>
            </td>
            
            <td>@{if (movie.MustWatch == false)}</td>

            <td>
                <!--onclick="location.href"Url.Action("Edit", "Movie", new { id = movie.Id })-->
                <button type="button" class="btn-outline-primary">
                    Edit
                </button>
            </td>
        </tr>
        }
    </tbody>
</table>
